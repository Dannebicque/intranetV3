{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'sadm.etudiant.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('sa_apogee_index') }}" class="btn btn-info btn-sm btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.import_etudiant'|trans }}"><i class="fas fa-plus"></i></a>
            <a href="{{ path('super_admin_homepage') }}" class="btn btn-primary btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.retour_administration'|trans }}">
                <i class="{{ iconDashboard }}"><span class="sr-only">dashboard</span></i>
            </a>
        </div>
    </div>
{% endblock %}

{% block content %}
<div class="card">
    <h4 class="card-title">{{ 'sadm.etudiant.heading'|trans }}</h4>
    <div class="card-body">
        <div class="form-group">
            <label class="form-label" for="etudiant">Login URCA, nom, prénom, numéro étudiant ou numéro INE
                de l'étudiant</label>

            <input type="text" name="login_urca" id="etudiant" class="form-control"
                   placeholder="Saisissez les premiers caractères">

        </div>
        <div class="d-grid mt-2">
            <button type="submit" class="btn d-block btn-warning">Recherchez l'étudiant
            </button>
        </div>
    </div>
</div>

    <div class="card">
        <h4 class="card-title">{{ 'sadm.etudiant.resultat.heading'|trans }}</h4>
        <div class="card-body" id="resultat">
            <twig:Alert type="info">Veuillez saisir les premiers caractères de votre recherche</twig:Alert>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('sadm.scolarite') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('sadm.scolarite') }}
{% endblock %}
