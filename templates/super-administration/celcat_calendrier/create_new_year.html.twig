{% extends 'base-super_admin.html.twig' %}

{% block header %}
    {{ 'sadm.celcat_calendrier.index.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('sa_celcat_calendrier_index') }}" class="btn btn-primary btn-float"
               title="{{ 'atitle.retour_liste'|trans }}" data-bs-toggle="tooltip" data-bs-placement="bottom"
            ><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'sadm.celcat_calendrier.index.heading'|trans }}</h4>
        <div class="card-body">
            <twig:Alert type="info">Executer la synchronisation avec Celcat pour récupérer le calendrier en
                fonction.
            </twig:Alert>
            <form name="annee_universitaire" method="post">
                <div id="annee_universitaire">
                    <div class="form-group">
                        <label class="required" for="annee_universitaire">Année universitaire</label>
                        <select id="annee_universitaire" name="annee_universitaire" class="form-select">
                            <option value="">Choisir l'année concernée</option>
                            {% for annee in annees %}
                                <option value="{{ annee.id }}">{{ annee.libelle }} ({{ annee.annee }})</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <button class="btn btn-success">Synchroniser le calendrier Celcat</button>
            </form>
        </div>
    </div>
{% endblock %}
