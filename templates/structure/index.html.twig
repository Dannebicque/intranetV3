                                   class="btn btn-secondary btn-outline btn-square btn-xs" data-provide="tooltip"
                                   data-placement="bottom" title="{{ 'atitle.active'|trans }}"><i class="fa
                       fa-eye"></i></a>
                            {% endif %}
                            {% if diplome.annees|length == 0 %}
