                                   data-csrf="{{ csrf_token('delete' ~ diplome.id) }}"
                                   class="btn btn-danger btn-outline btn-square btn-xs supprimer"><i
                                            class="{{ iconDelete }}" data-provide="tooltip" data-placement="bottom"
