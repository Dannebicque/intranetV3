<table class="table" id="qvAgendaDatatable">
    <thead>
    <tr>
        <th>#</th>
        <th>{{ 'table.date'|trans }}</th>
        <th>{{ 'table.jour'|trans }}</th>
        <th>{{ 'table.heure'|trans }}</th>
        <th>{{ 'table.type_cours'|trans }}</th>
        <th>{{ 'table.groupe'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for chrono in chronologique %}
        <tr class="previ{{ chrono.type_cours|lower }}">
            <td>{{ loop.index }}</td>
            <td>{{ chrono.date }}</td>
            <td>{{ chrono.jour }}</td>
            <td>{{ chrono.heureDebut|date('H:i') }}</td>
            <td>{{ chrono.type_cours }}</td>
            <td>{{ chrono.groupe }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
