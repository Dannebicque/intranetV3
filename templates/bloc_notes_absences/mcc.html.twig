<div class="col-sm-12">
    <div class="card">
        <h4 class="card-title">{{ 'mcc'|trans }}</h4>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ 'table.matiere'|trans }}</th>
                    <th>{{ 'table.ue'|trans }}</th>
                    <th>{{ 'table.nombre.notes'|trans }}</th>
                    <th>{{ 'table.coefficient'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for matiere in matieres %}
                    <tr>
                        <td>{{ matiere.display }}</td>
                        <td>{{ matiere.ue ? matiere.ue.display : 'non.defini'|trans }}</td>
                        <td>{{ matiere.nbNotes }}</td>
                        <th>{{ matiere.coefficient }}</th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
