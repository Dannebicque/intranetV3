{% for i in 1..5 %}
    {% for j in 'a'..'y' %}
        <div class="jour{{ i }}{{ j }} {% if 'now'|date('N') != i %}col-edt-hide{% endif %}"></div>
    {% endfor %}
{% endfor %}
<span class="track-slot col-edt-header jour {% if 'now'|date('N') != 1 %}col-edt-hide{% endif %}"
      aria-hidden="true" style="grid-column: track-1; grid-row: tracks;">
        Lundi {{ calendrier.tabJour.lundi|date('d/m') }}
    </span>
