{% for competence, ac in acs %}
    <h4>{{ competence }}</h4>
    <div class="row">
        {% for a in ac %}
            <div class="col-md-6">
                <div class="form-check">
                    <input type="checkbox" id="ac_{{ a.id }}" name="ac[]" class="form-check-input" value="{{ a.id }}"
                            {% if a.checked %}checked{% endif %}>
                    <label class="form-check-label" for="ac_{{ a.id }}">{{ a.code }} : {{ a.libelle }}</label>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <twig:Alert type="warning">Indiquer un semestre et au moins une comp√©tence</twig:Alert>
{% endfor %}
