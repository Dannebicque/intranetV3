<div class="card">
    <h4 class="card-title">{{ 'adm.type_document.new.heading'|trans }}</h4>
    <div class="card-body">
        {% form_theme form 'form/my-form.html.twig' %}
        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-12 col-md-6">
                {{ form_row(form.libelle) }}
            </div>
            <div class="col-sm-12 col-md-6">
                {{ form_row(form.parent) }}
            </div>
        </div>

        <button class="btn btn-success">
            <i class="fas fa-floppy-disk"></i> {{ button_label|default('label.save'|trans) }}
        </button>
        <twig:Alert type="info">
            Tous les champs avec un <span class="text-red">*</span> sont obligatoires
        </twig:Alert>
        {{ form_end(form) }}
    </div>
</div>
