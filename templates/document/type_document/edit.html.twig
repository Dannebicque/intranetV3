{% extends is_granted('ROLE_QUALITE') ? 'base-super_admin.html.twig' : 'base.html.twig' %}

{% block header %}
    {{ 'adm.type_document.index.heading'|trans }}
{% endblock %}



{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            {% if is_granted('ROLE_QUALITE') %}
                <a href="{{ path('super_admin_homepage') }}"
                   class="btn btn-primary btn-float"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"

                   title="{{ 'atitle.retour_administration'|trans }}">
                    <i class="{{ iconAdmin }}"><span class="sr-only">Administration</span></i>
                </a>
            {% else %}

                <a href="{{ path('administration_index') }}"
                   class="btn btn-primary btn-float"
                   data-bs-toggle="tooltip" data-bs-placement="bottom"

                   title="{{ 'atitle.retour_administration'|trans }}">
                    <i class="{{ iconAdmin }}"><span class="sr-only">Administration</span></i>
                </a>
            {% endif %}
        </div>

    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.type_document.edit.heading'|trans }}</h4>
        <div class="card-body">
            {% form_theme form 'form/my-form.html.twig' %}
            {{ form_start(form) }}
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    {{ form_row(form.libelle) }}
                </div>
                <div class="col-sm-12 col-md-6">
                    {{ form_row(form.parent) }}
                </div>
            </div>

            <button class="btn btn-success">
                <i class="fas fa-floppy-disk"></i> {{ button_label|default('label.save'|trans) }}
            </button>
            <twig:Alert type="info">
                Tous les champs avec un <span class="text-red">*</span> sont obligatoires
            </twig:Alert>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
