html {
    height: 100%;
    font-family: "Open Sans", Arial, sans-serif;
}

body {
    min-height: 100%;
    margin: 0;
    padding: 0;
    position: relative;
    font-family: "Open Sans", Arial, sans-serif;
    font-size: 10px;
}

.messagecourrier {
    font-size: 10px;
    text-align: justify;
}

#messagecourrier p {
    margin-bottom: 6px;
    margin-top: 0;
}

h2 {
    font-weight: bold;
    font-size: 12px;
}

#courrier {
    margin-top: 80px;
}

#refcourrier {
    margin-top: 20px;
    font-size: 10px;
}

#datecourrier {
    margin-top: 20px;
    margin-bottom: 25px;
}

#adresseent {
    margin-left: 400px;
    position: fixed;
    top: 100px;
    left: 30px;
}

#signatures {
    margin-top: 20px;
    margin-left: 400px;
}

.titresuligne {
    font-weight: bold;
    text-decoration: underline;
    margin-bottom: 3px;
    margin-top: 6px;
    padding: 6px 0 0;
}
