<h4><strong>{{ ordre }}.</strong> {{ titre }}</h4>

<twig:Alert type="info">{{ text_explicatif }}</twig:Alert>

{% for question in questions %}
    {% if options.mode == 'mode.resultat.tableau' %}
        {{ question_tableau_render(question, ordre) }}
    {% elseif options.mode == 'mode.resultat.graphique' %}
        {{ question_graphique_render(question, ordre) }}
    {% else %}
        {{ question_render(question, ordre, loop.index) }}
    {% endif %}
{% endfor %}
<br>
{% if options.mode == 'mode.apercu' or options.mode == 'mode.etudiant' %}
    <twig:Alert type="info">
        Les questions qui affichent un <span class="required-etoile">*</span> sont obligatoires.
    </twig:Alert>
{% endif %}
