{% block type_echelle %}
    <fieldset class="form-group mt-2" {% if visible == false %}style="display:none"{% endif %}
            {{ stimulus_controller('enquete', {
                parametres: parametres|json_encode,
                idQuestion: id,
                typeQuestionnaire: typeQuestionnaire,
                questionnaireId: questionnaireId
            }) }}
              data-action="enquete:change-value->enquete#updateQuestion"
              id="field_{{ id }}">
        {{ block('libelle') }}
        <div aria-describedby="quizz_question_{{ id }}_help">
            <small id="quizz_question_{{ id }}_help" class="form-text text-muted">{{ help }}</small>
        </div>
        <div class="row">
            {{ block('liste_reponses') }}
        </div>
    </fieldset>
{% endblock %}

{% block type_libre %}
