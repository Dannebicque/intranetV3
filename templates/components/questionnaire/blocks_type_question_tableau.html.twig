{% block type_qcu %}
    {{ block('libelle') }}
    {% if choix == null %}
        <twig:Alert type="danger">
            Cette question n'a pas de choix.
        </twig:Alert>
    {% else %}
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Choix</th>
                <th>Nb. Réponse</th>
                <th>%</th>
            </tr>
            </thead>
            <tbody>
            {% for reponse in reponses %}
                <tr>
                    <td>{{ reponse.libelle }}</td>
                    <td>{{ choix.totalReponses[reponse.valeur] is defined ? choix.totalReponses[reponse.valeur] : 0 }}</td>
                    <td>{{ choix.pourcentageReponse(reponse.valeur) }} %</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th>Total</th>
                <th>{{ choix.nbReponsesTotal }} %</th>
                <th>100 %</th>
            </tr>
            </tfoot>
        </table>
    {% endif %}
{% endblock %}


