                   data-bs-toggle="tooltip" data-bs-placement="bottom"
                   title="{{ 'atitle.afficher_semestre'|trans }}"><i class="fa fa-eye"></i>
                    <span class="sr-only">{{ 'atitle.afficher_semestre'|trans }}</span></a>
            {% endif %}
