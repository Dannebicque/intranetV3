{% extends 'base.html.twig' %}

{% block header %}
    {{ 'adm.stage_entreprise.index.heading'|trans }}
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_stage_periode_gestion', {uuid: stagePeriode.uuidString}) }}"
               class="btn btn-primary btn-float" data-provide="tooltip"
               data-placement="bottom" title="{{ 'atitle.retour.stage_periode_gestion'|trans }}"><i
                        class="material-icons">arrow_back</i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <h4 class="card-title">{{ 'adm.stage_entreprise.index.heading'|trans }}</h4>
        <div class="card-body">
            <table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
                <thead>
                <tr>
                    <th>{{ 'table.entreprise'|trans }}</th>
                    <th>{{ 'table.ville'|trans }}</th>
                    <th>{{ 'table.responsale'|trans }}</th>
                    <th>{{ 'table.email'|trans }}</th>
                    <th>{{ 'table.nbstagiaire'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for entreprise in entreprises %}
                    <tr>
                        <td>{{ 'table.entreprise'|trans }}</td>
                        <td>{{ 'table.ville'|trans }}</td>
                        <td>{{ 'table.responsale'|trans }}</td>
                        <td>{{ 'table.email'|trans }}</td>
                        <td>{{ 'table.nbstagiaire'|trans }}</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'no.record.found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block fabactions %}
    {{ include('composants/fab-buttons.html.twig', {boutons:[
        {type: 'info',
            href: path('administration_stage_entreprise_export', {_format:'pdf'}),
            title: 'exporter.pdf'|trans,
            icone : "fa fa-file-pdf-o"
        },
        {
            type:'info',
            href:path('administration_stage_entreprise_export', {_format:'csv'}),
            title: 'exporter.csv'|trans,
            icone: 'fa fa-file-text-o'
        },
        {
            type:'info',
            href:path('administration_stage_entreprise_export', {_format:'xlsx'}),
            title: 'exporter.xls'|trans,
            icone: 'fa fa-file-excel-o'
        },
        {
            type:'info',
            href:path('help_article', {sujet: 'administration_stage_entreprise'}),
            title: 'aide'|trans,
            icone: 'fa fa-question'
        }
    ]}) }}
{% endblock %}