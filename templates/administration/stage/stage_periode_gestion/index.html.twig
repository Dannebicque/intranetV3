{% extends 'base.html.twig' %}

{% block header %}
    {{ 'stage_periode_gestion.heading'|trans({'%libelle%':stagePeriode.libelle})|raw }}
{% endblock %}

{% block headerright %}
    <div class="right gap-items-2">
        {{ include('administration/_navStage.html.twig', {path_name: 'administration_stage_periode_gestion'}) }}
    </div>
{% endblock %}

{% block headeractions %}
    <div class="header-action">
        <div class="buttons">
            <a href="{{ path('administration_stage_periode_offre_index', {uuid: stagePeriode.uuidString}) }}"
               class="btn btn-info btn-sm btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.stage_offres'|trans }}"><i class="fas fa-briefcase"></i></a>
            <a href="{{ path('administration_stage_entreprise_index', {uuid: stagePeriode.uuidString}) }}"
               class="btn btn-info btn-sm btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.stage_entreprises'|trans }}"><i
                        class="fas fa-building"></i></a>
            <a href="{{ path('administration_stage_periode_courrier_index', {uuid: stagePeriode.uuidString}) }}"
               class="btn btn-info btn-sm btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.stage_courrier'|trans }}"><i
                        class="fas fa-envelope"></i></a>

            <a href="{{ path('administration_stage_periode_edit', {id: stagePeriode.uuidString}) }}"
               class="btn btn-warning btn-sm btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.modifier.la.periode'|trans }}"><i
                        class="{{ iconEdit }}"></i></a>

            <a href="{{ path('administration_index') }}" class="btn btn-primary btn-float" data-bs-toggle="tooltip" data-bs-placement="bottom"
               title="{{ 'atitle.retour_administration'|trans }}"><i class="{{ iconAdmin }}"><span class="sr-only">Administration</span></i></a>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12 sol-sm-12">
            <div class="card card-slided-up">
                <header class="card-header">
                    <h4 class="card-title">{{ 'periode'|trans }} : <strong>{{ stagePeriode.libelle }}</strong>
                                                                 (n° {{ stagePeriode.numeroPeriode }}
                                                                 | {{ stagePeriode.semestre.libelle }})</h4>
                    <ul class="card-controls">
                        <li>
                            <a class="card-btn-slide" href="#" title="plus de détails" data-bs-toggle="tooltip" data-bs-placement="bottom">
                                <i class="fas fa-chevron-down"></i>
                            </a></li>
                    </ul>
                </header>
                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <p>{{ 'periode.de.stage.du'|trans }}
                                    <strong>{{ stagePeriode.dateDebut ? stagePeriode.dateDebut|format_date('long') : 'non.defini'|trans }}
                                        {{ 'au'|trans }}   {{ stagePeriode.dateFin ? stagePeriode
                                        .dateFin|format_date('long') : 'non.defini'|trans }}</strong>
                                    {{ 'soit'|trans }} {{ stagePeriode.nbJours }} {{ 'jour.s'|trans }} {{ 'or'|trans }} {{ stagePeriode
                                    .nbSemaines }} {{ 'semaine.s'|trans }}
                                </p>
                                <p>{{ 'les.responsables.sont'|trans }} : </p>
                                <ul>
                                    {% for personnel in stagePeriode.responsables %}
                                        <li>{{ personnel.displayPr }}</li>
                                    {% else %}
                                        {{ 'non.defini'|trans }}
                                    {% endfor %}
                                </ul>
                                <p>
                                    {{ 'les.dates.de.la.periode.sont'|trans }}
                                    <strong>{{ stagePeriode.datesFlexibles ? 'flexibles'|trans : 'fixe'|trans }}</strong>.<br/>
                                    {{ 'l.assistant.e'|trans }}
                                    <strong>{{ stagePeriode.copieAssistant ? 'est.en.copie'|trans : 'nest.pas.en.copie'|trans }}</strong>
                                    {{ 'copie.des.mails.generes'|trans }}.
                                </p>
                            </div>
                            <div class="col-md-6 col-sm-12">
                                <p>{{ 'periode.interruption.prevues'|trans }} : </p>
                                <ul>
                                    {% for stagePeriodeInterruption in stagePeriode.stagePeriodeInterruptions %}
                                        <li>
                                            {{ 'du'|trans }} {{ stagePeriodeInterruption.dateDebut? stagePeriodeInterruption
                                            .dateDebut|format_date('long') : 'non.defini'|trans }}
                                            {{ 'au'|trans }} {{ stagePeriodeInterruption.dateFin? stagePeriodeInterruption
                                            .dateFin|format_date('long') : 'non.defini'|trans }} </li>
                                    {% else %}
                                        {{ 'non.defini'|trans }}
                                    {% endfor %}
                                </ul>

                                <p>{{ 'periode.de.soutenance.prevue.le'|trans }} : </p>
                                <ul>
                                    {% for stagePeriodeSoutenance in stagePeriode.stagePeriodeSoutenances %}
                                        <li>
                                            {{ 'du'|trans }} {{ stagePeriodeSoutenance.dateDebut?stagePeriodeSoutenance
                                            .dateDebut|format_date('long') : 'non.defini'|trans }}
                                            {{ 'au'|trans }} {{ stagePeriodeSoutenance.dateFin?stagePeriodeSoutenance
                                            .dateFin|format_date('long') : 'non.defini'|trans }}
                                            , {{ 'rapport.pour.le'|trans }}
                                            {{ stagePeriodeSoutenance.dateRenduRapport?stagePeriodeSoutenance
                                            .dateRenduRapport|format_datetime('long', 'short') : 'non.defini'|trans }}</li>
                                    {% else %}
                                        {{ 'non.defini'|trans }}
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 col-lg-12">
            <div class="card">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs nav-tabs-danger nav-justified" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#onglet_proposition"
                           role="tab">{{ 'propositions.a.valider'|trans }} ({{ myStage.propositionsAValider|length }}
                                                                           )</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#onglet_imprimer"
                           role="tab">{{ 'convention.a.imprimer'|trans }}
                            ({{ myStage.conventionAImprimer|length }})</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#onglet_envoyer"
                           role="tab">{{ 'convention.a.envoyer'|trans }}
                            ({{ myStage.conventionAEnvoyer|length }})</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#onglet_attente" role="tab">{{ 'convention.en.attente.de.retour'|trans }}
                            ({{ myStage.conventionEnAttente|length }})</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#onglet_complet"
                           role="tab">{{ 'conventions.completes'|trans }}
                            ({{ myStage.conventionComplete|length }})</a>
                    </li>
                </ul>

                <!-- Tab panes -->
                <div class="card-body tab-content">
                    <div class="tab-pane fade active show" id="onglet_proposition">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Etudiant</th>
                                <th>Entreprise</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for stageEtudiant in myStage.propositionsAValider %}
                                <tr>
                                    <td>{{ stageEtudiant.etudiant.display }}</td>
                                    <td>{{ stageEtudiant.entreprise.raisonSociale }}</td>
                                    <td>
                                        <a href="{{ path('administration_stage_etudiant_show',{id:stageEtudiant.id}) }}"
                                           class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Voir le stage"><i class="{{ iconShow }}"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_edit',{id:stageEtudiant.id}) }}"
                                           class="btn btn-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Editer le stage"><i class="{{ iconEdit }}"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_etudiant_convention_pdf', {id:stageEtudiant.id}) }}"
                                           class="btn btn-success" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Editer la convention" target="_blank"><i
                                                    class="fa fa-print"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_change_etat',
                                            {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant
                                            .etudiant.id, etat: constant
                                                ('App\\Entity\\StageEtudiant::ETAT_STAGE_VALIDE')}) }}" class="btn
                                                    btn-success" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Valider le stage"><i class="fa fa-check"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_change_etat',
                                            {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant
                                            .etudiant.id, etat: constant
                                                ('App\\Entity\\StageEtudiant::ETAT_STAGE_INCOMPLET')}) }}" class="btn
                                                    btn-warning" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Proposition incomplète"><i class="fa fa-ban"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_change_etat',
                                            {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant
                                            .etudiant.id, etat: constant
                                                ('App\\Entity\\StageEtudiant::ETAT_STAGE_REFUS')}) }}" class="btn
                                                btn-danger"
                                           data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top" title="Refuser le stage"><i
                                                    class="fa fa-times"></i></a></td>
                                </tr>
                            {% else %}
                                <tr class="bg-success">
                                    <td colspan="3">Aucune convention en attente de validation</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="onglet_imprimer">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'table.etudiant'|trans }}</th>
                                <th>{{ 'table.entreprise'|trans }}</th>
                                <th>{{ 'table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for stageEtudiant in myStage.conventionAImprimer %}
                                <tr>
                                    <td>{{ stageEtudiant.etudiant.display }}</td>
                                    <td>{{ stageEtudiant.entreprise.raisonSociale }}</td>
                                    <td>
                                        <a href="{{ path('administration_stage_etudiant_show',{id:stageEtudiant.id}) }}"
                                           class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Voir/modifier le stage"><i class="{{ iconShow }}"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_etudiant_convention_pdf', {id:stageEtudiant.id}) }}"
                                           class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Imprimer la convention"><i class="fa fa-print"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_etudiant_courrier_pdf', {id:stageEtudiant.id}) }}" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Editer le courrier" target="_blank"><i
                                                    class=" fa fa-envelope"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_change_etat',
                                            {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant.etudiant.id, etat: constant
                                                ('App\\Entity\\StageEtudiant::ETAT_STAGE_CONVENTION_IMPRIMEE')}) }}"
                                           class="btn
                                                    btn-success" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Convention imprimée"><i class="fa fa-check"></i></a>

                                        <a href="#"
                                           data-etudiant="{{ stageEtudiant.id }}"
                                           class="btn btn-purple envoyerConvention" data-bs-toggle="tooltip"
                                           data-bs-placement="bottom"
                                           data-placement="top"
                                           title="Envoyer à l'étudiant pour signature">
                                            <i class="fa fa-signature"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="bg-success">
                                    <td colspan="3">{{ 'aucune.convention.a.envoyer'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="onglet_envoyer">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'table.etudiant'|trans }}</th>
                                <th>{{ 'table.entreprise'|trans }}</th>
                                <th>{{ 'table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for stageEtudiant in myStage.conventionAEnvoyer %}
                                <tr>
                                    <td>{{ stageEtudiant.etudiant.display }}</td>
                                    <td>{{ stageEtudiant.entreprise.raisonSociale }}</td>
                                    <td>
                                        <a href="{{ path('administration_stage_etudiant_show',{id:stageEtudiant.id}) }}"
                                           class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Voir/modifier le stage"><i class="{{ iconShow }}"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_etudiant_convention_pdf', {id:stageEtudiant.id}) }}"
                                           class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Imprimer la convention"><i class="fas fa-print"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_etudiant_courrier_pdf', {id:stageEtudiant
                                            .id}) }}" class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Editer le courrier" target="_blank"><i
                                                    class=" fas fa-envelope"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_change_etat',
                                            {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant
                                            .etudiant.id, etat: constant
                                                ('App\\Entity\\StageEtudiant::ETAT_STAGE_CONVENTION_ENVOYEE')}) }}"
                                           class="btn
                                                    btn-success" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Convention envoyée"><i class="fas fa-check"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="bg-success">
                                    <td colspan="3">{{ 'aucune.convention.a.envoyer'|trans }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="onglet_attente">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>{{ 'table.etudiant'|trans }}</th>
                                <th>{{ 'table.entreprise'|trans }}</th>
                                <th>{{ 'table.actions'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for stageEtudiant in myStage.conventionEnAttente %}
                                <tr>
                                    <td>{{ stageEtudiant.etudiant.display }}</td>
                                    <td>{{ stageEtudiant.entreprise.raisonSociale }}</td>
                                    <td>
                                        <a href="{{ path('administration_stage_etudiant_show',{id:stageEtudiant.id}) }}"
                                           class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Voir le stage"><i class="{{ iconShow }}"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_etudiant_convention_pdf', {id:stageEtudiant.id}) }}"
                                           class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Imprimer la convention"><i class="fas fa-print"></i></a>
                                        <a href="{{ path('administration_stage_etudiant_change_etat',
                                            {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant
                                            .etudiant.id, etat: constant
                                                ('App\\Entity\\StageEtudiant::ETAT_STAGE_CONVENTION_RECUE')}) }}"
                                           class="btn
                                                    btn-success" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Convention complète"><i class="fas fa-check"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr class="bg-success">
                                    <td colspan="3">Aucune convention en attente de retour</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="onglet_complet">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Etudiant</th>
                                <th>Entreprise</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for stageEtudiant in myStage.conventionComplete %}
                                <tr>
                                    <td>{{ stageEtudiant.etudiant.display }}</td>
                                    <td>{{ stageEtudiant.entreprise.raisonSociale }}</td>
                                    <td>
                                        <a href="{{ path('administration_stage_etudiant_show',{id:stageEtudiant.id}) }}"
                                           class="btn btn-info" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Voir le stage"><i class="{{ iconShow }}"></i></a>
                                        <a href="{{ path
                                            ('administration_stage_avenant_index', {stageEtudiant:stageEtudiant.id}) }}"
                                           class="btn btn-primary" data-bs-toggle="tooltip" data-bs-placement="bottom" data-placement="top"
                                           title="Gérer les avenants"><i class="file-signature"></i></a>
