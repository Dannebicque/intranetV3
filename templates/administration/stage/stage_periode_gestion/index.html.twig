            </div>
        </div>

        <div class="col-md-12 col-lg-12">
            <div class="card">
                <h4 class="card-header">Etudiants</h4>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>{{ 'table.etudiant'|trans }}</th>
                            <th>{{ 'table.entreprise'|trans }}</th>
                            <th>{{ 'table.ville'|trans }}</th>
                            <th>{{ 'table.periode'|trans }}</th>
                            <th>{{ 'table.tuteur_universitaire'|trans }}</th>
                            <th>{{ 'table.etat'|trans }}</th>
                            <th>{{ 'table.actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for stageEtudiant in myStage.dataEtudiants %}
                        <tr>
                            <td>{{ stageEtudiant.etudiant.display }}</td>
                            {% if stageEtudiant.stage is defined %}
                                {% if stageEtudiant.stage.etatStage == constant
                                    ('App\\Entity\\StageEtudiant::ETAT_STAGE_AUTORISE') %}
                                    <td colspan="4">
                                        <div class="d-grid">
                                            <button class="btn d-block btn-primary">
                                                {{ 'saisie.autorise.formulaire.non.completee'|trans }}
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <label for="tuteur_{{ stageEtudiant.etudiant.id }}" class="sr-only"></label>
                                        <select name="tuteur_{{ stageEtudiant.etudiant.id }}" id="tuteur_{{ stageEtudiant.etudiant.id }}" data-stage="{{ stageEtudiant.stage.id }}"
                                                class="changetuteur form-select">
                                            <option>{{ 'table.tuteur_universitaire'|trans }}</option>
                                            {% for personnel in user_data.personnels %}
                                                <option value="{{ personnel.id }}" {% if stageEtudiant.stage
                                                .tuteurUniversitaire != null and personnel.id ==
                                                    stageEtudiant.stage.tuteurUniversitaire.id %}selected{% endif %}>{{ personnel.displayPr }}</option>
                                            {% endfor %}
                                        </select>
                                    </td>
                                    <td>
                                        <a href="{{ path('administration_stage_etudiant_delete', {id:stageEtudiant.stage.id}) }}"
                                           data-csrf="{{ csrf_token('delete' ~ stageEtudiant.stage.id) }}"
                                           class="btn btn-danger btn-outline btn-square supprimer"
                                           data-bs-toggle="tooltip" data-bs-placement="bottom"
                                           title="{{ 'atitle.supprimer'|trans }}"><i class="{{ iconDelete }}"></i></a>
                                        <div class="dropdown table-action btn btn-primary btn-outline">
                                            <span class="dropdown-toggle no-caret" data-bs-toggle="dropdown"><i
                                                        class="fas fa-ellipsis-h rotate-90"></i>{{ 'autre.situation'|trans }}
                                                ?</span>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item"
                                                   href="{{ path('administration_stage_etudiant_change_etat', {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant.etudiant.id, etat: constant
                                                       ('App\\Entity\\StageEtudiant::ETAT_STAGE_ETRANGER')}) }}">
                                                    {{ 'valider.stage.etranger'|trans }}
                                                </a>
                                                <a class="dropdown-item"
                                                   href="{{ path('administration_stage_etudiant_change_etat', {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant.etudiant.id, etat: constant
                                                       ('App\\Entity\\StageEtudiant::ETAT_STAGE_ERASMUS')}) }}">
                                                    {{ 'semestre.erasmus'|trans }}
                                                </a>
                                                <a class="dropdown-item"
                                                   href="{{ path('administration_stage_etudiant_change_etat', {stagePeriode: stagePeriode.uuidString, etudiant:stageEtudiant.etudiant.id, etat: constant
                                                       ('App\\Entity\\StageEtudiant::ETAT_STAGE_APPRENTISSAGE')}) }}">{{ 'annee.en.apprentissage'|trans }}</a>
                                            </div>
                                        </div>
                                    </td>
                                {% elseif stageEtudiant.stage.etatStage == constant
                                    ('App\\Entity\\StageEtudiant::ETAT_STAGE_ETRANGER') or
                                    stageEtudiant.stage.etatStage == constant
                                    ('App\\Entity\\StageEtudiant::ETAT_STAGE_APPRENTISSAGE') or
                                    stageEtudiant.stage.etatStage == constant
                                    ('App\\Entity\\StageEtudiant::ETAT_STAGE_ERASMUS') %}
                                    <td colspan="5">
                                        <div class="d-grid">
                                            <button class="btn d-block btn-primary">
                                                {{ stageEtudiant.stage.etatStage|trans }}
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="dropdown table-action btn btn-primary btn-outline">
                                            <span class="dropdown-toggle no-caret" data-bs-toggle="dropdown"><i
                                                        class="fas fa-ellipsis-h rotate-90"></i>{{ 'autre.situation'|trans }}
                                                ?</span>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item"
                                                   href="{{ path('administration_stage_etudiant_change_etat',
                                                       {stagePeriode: stagePeriode.uuidString,
                                                           etudiant:stageEtudiant.etudiant.id,
                                                           etat: constant('App\\Entity\\StageEtudiant::ETAT_STAGE_AUTORISE')}) }}">{{ 'autoriser.la.saisie'|trans }}</a>
                                                <a class="dropdown-item"
                                                   href="{{ path('administration_stage_etudiant_change_etat', {stagePeriode: stagePeriode.uuidString,
                                                       etudiant:stageEtudiant.etudiant.id,
                                                       etat:constant('App\\Entity\\StageEtudiant::ETAT_STAGE_ETRANGER')}) }}">
                                                    {{ 'valider.stage.etranger'|trans }}
                                                </a>
