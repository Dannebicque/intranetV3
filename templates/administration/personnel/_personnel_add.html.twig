{% for pers in personnels %}
    <tr>
        <td>{{ pers.nom }}</td>
        <td>{{ pers.prenom }}</td>
        <td>{{ pers.numeroHarpege }}</td>
        <td>{{ pers.username }}</td>
        <td>{{ pers.mail_univ }}</td>
        <td>
            <button
                    class="btn btn-success btn-outline btn-square"
                    data-provide="tooltip"
                    data-placement="bottom"
                    {{ stimulus_action('adm--personnel--add', 'addPersonnel', 'click', {slug: pers.slug}) }}
                    title="Ajouter au departement"
            >
                <i class="fas fa-plus"></i>
            </button>
        </td>
    </tr>
    {% if loop.last %}
        <tr id="ligne-no-result">
            <td colspan="6">Intervenant non présent : <a href="{{ path('administration_personnel_create') }}"
                                                         class="btn btn-success"><i class="{{ iconAdd }}"></i>
                    Ajouter un intervenant</a>
            </td>
        </tr>
    {% endif %}
{% else %}
    {% if search == '' %}
        <tr id="ligne-no-result">
            <td colspan="6">Saisissez quelques caractères pour afficher des résultats</td>
        </tr>
    {% else %}
        <tr id="ligne-no-result">
            <td colspan="6">Aucun résultat : <a href="{{ path('administration_personnel_create') }}"
                                                class="btn btn-success"><i class="{{ iconAdd }}"></i>
                    Ajouter un intervenant</a>
            </td>
        </tr>
    {% endif %}
{% endfor %}
