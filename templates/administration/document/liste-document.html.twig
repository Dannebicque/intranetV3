<table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables" data-checkbox="true" >
    <thead>
    <tr>
        <th><input name="select_all" value="1" id="select_all" type="checkbox" /></th>
        <th>{{ 'table.libelle'|trans }}</th>
        <th>{{ 'table.type_fichier'|trans }}</th>
        <th>{{ 'table.type_document'|trans }}</th>
        <th>{{ 'table.updated'|trans }}</th>
        <th>{{ 'table.fichier'|trans }}</th>
        <th>{{ 'table.actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td></td>
            <td>{{ document.libelle }}</td>
            <td>{{ document.typeFichier }}</td>
            <td>{{ document.typeDocument ? document.typeDocument.libelle : 'non.defini'|trans }}</td>
            <td>{{ document.updated ? document.updated|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
            <td><a href="{{ asset('upload/documents/'~document.documentName) }}"
                   target="_blank">{{ 'voir.le.fichier'|trans }}</a></td>
            <td>
                {{ include('composants/adm-buttons-table-index.html.twig', {elt:'document', id:document.uuidString}) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
