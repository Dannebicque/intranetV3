<table class="table table-striped table-bordered" cellspacing="0" data-provide="datatables">
    <thead>
    <tr>
        <th>#</th>
        <th>{{ 'table.libelle'|trans }}</th>
        <th>{{ 'table.type_fichier'|trans }}</th>
        <th>{{ 'table.updated'|trans }}</th>
        <th>{{ 'table.fichier'|trans }}</th>
        <th>{{ 'table.actions'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for document in documents %}
        <tr>
            <td>{{ document.id }}</td>
            <td>{{ document.libelle }}</td>
            <td>{{ document.typeFichier }}</td>
            <td>{{ document.updated ? document.updated|localizeddate('long', 'short', app.request.getLocale()) : '' }}</td>
            <td><a href="{{ asset('upload/documents/'~document.documentName) }}" target="_blank">Voir le fichier</a></td>
            <td>
                {{ include('composants/adm-buttons-table-index.html.twig', {elt:'document', id:document.id}) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
