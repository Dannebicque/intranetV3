<div class="card">
    <header class="card-header">
        <h4 class="card-title">{{ 'adm.groupe.semestre.add.heading'|trans }} {{ semestre.libelle }} |
            {{ diplome.displayCourt }}</h4>
        <div class="card-header-actions"></div>
    </header>
    <div class="card-body">
        {% form_theme form 'form/my-form.html.twig' %}
        {{ form_start(form) }}
        <table class="table table-borderless">
            <tbody>
            <tr>
                <td>
                    {{ form_row(form.libelle) }}
                    <div class="invalid-feedback" id="error_groupe_libelle">Libell√© du groupe obligatoire</div>
                </td>
                <td>{{ form_row(form.ordre) }}
                    <div class="invalid-feedback" id="error_groupe_ordre">Ordre du groupe obligatoire</div>

                </td>
                <td>{{ form_row(form.parent) }}</td>
                <td>{{ form_row(form.codeApogee) }}
                </td>
                <td>{{ form_row(form.typeGroupe) }}</td>
                <td>
                    {% if diplome.apc == true %}
                    {{ form_row(form.apcParcours) }}
                    {% else %}
                        {{ form_row(form.parcours) }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div class="d-grid">
                    <button class="btn btn-success d-block"
                            data-action="click->groupes-adm#addGroupe"
                            data-semestre="{{ semestre.id }}">{{
                        button_label|default('label.save'|trans) }}</button>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
        {{ form_end(form) }}
    </div>
</div>
